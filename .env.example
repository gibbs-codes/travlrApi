PORT=3006
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/travlrapi
MONGO_URI=mongodb://localhost:27017/travlr_dev

# AI Provider Configuration
AI_PROVIDER=openai
AI_MODEL=gpt-3.5-turbo

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama Configuration (if using local Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Mock AI Provider Configuration (for testing)
MOCK_DELAY_MS=500

# External Service API Keys
# Amadeus (Flight data)
AMADEUS_CLIENT_ID=your-amadeus-client-id-here
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret-here
AMADEUS_ENVIRONMENT=test

# Google Maps/Places API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# RapidAPI (Booking.com and other services)
RAPIDAPI_KEY=your-rapidapi-key-here

# Security
JWT_SECRET=your-jwt-secret-here
# CORS Configuration
CORS_ORIGIN=*
